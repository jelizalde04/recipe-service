{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Update Recipe Ingredients API",
    "description": "API for updating the ingredients of a recipe"
  },
  "paths": {
    "/update-recipe-ingredients/{id}": {
      "put": {
        "summary": "Update the ingredients of a recipe",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "newIngredients",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "newIngredients": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Recipe ingredients updated successfully"
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "Recipe not found"
          }
        }
      }
    }
  }
}
